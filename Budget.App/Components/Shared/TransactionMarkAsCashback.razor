<div class="form-floating flex-grow-1 mb-1">
    <InputDate id="markAsCashback" class="form-control" @bind-Value="_date"/>
    <label for="markAsCashback">@Transaction.NameOtherParty</label>
</div>
<div class="d-flex gap-1">
    <div>
        <button class="btn btn-success" @onclick="MarkAsCashbackAsync">
            @if (_isLoading)
            {
                <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                <span class="visually-hidden" role="status">Loading...</span>
            }
            else
            {
                <i class="bi bi-send"></i>
                <span class="visually-hidden">Save cashback date</span>
            }
        </button>
    </div>
    <div>
        <button class="btn btn-danger" @onclick="() => OnDone.InvokeAsync(false)">
            <i class="bi bi-sign-stop"></i>
            <span class="visually-hidden">Cancel marking</span>
        </button>
    </div>
</div>